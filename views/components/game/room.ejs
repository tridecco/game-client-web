            <div class="flex flex-col items-center mb-4">
                <img class="w-16 h-16 rounded-full border-2 border-gray-300" src="/img/default-avatar.png" alt="Player 1">
                <span class="mt-2 text-sm">Player 1</span>
            </div>
            <div class="flex flex-col items-center mb-4">
                <img class="w-16 h-16 rounded-full border-2 border-gray-300" src="/img/default-avatar.png" alt="Player 2">
                <span class="mt-2 text-sm">Player 2</span>
            </div>
            <div class="flex flex-col items-center mb-4">
                <img class="w-16 h-16 rounded-full border-2 border-gray-300" src="/img/default-avatar.png" alt="Player 3">
                <span class="mt-2 text-sm">Player 3</span>
            </div>
            <div class="flex flex-col items-center mb-4">
                <img class="w-16 h-16 rounded-full border-2 border-gray-300" src="/img/default-avatar.png" alt="Player 4">
                <span class="mt-2 text-sm">Player 4</span>
            </div>
        </div>
        <button class="w-full py-2 px-4 bg-gray-400 text-white font-semibold rounded-lg cursor-not-allowed" disabled>Start Game</button>
    </div>
