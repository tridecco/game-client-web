<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
    <div class="mx-auto w-full max-w-md p-4 border border-gray-300 rounded-lg shadow-sm bg-gray-50">
        <h1 class="text-2xl font-bold mb-4 text-center">Waiting for a Match</h1>
        <p class="text-lg mb-4 text-center">Game Mode: <span id="queue-mode" class="font-semibold"></span></p>
        <div class="text-2xl font-semibold mb-6 text-center">
            <span id="waiting-time">00:00</span>
        </div>
        <button id="exit-queue" class="w-full py-2 bg-red-500 text-white font-bold rounded hover:bg-red-700">
            Exit Queue
        </button>
    </div>
</div>
<script>
    document.getElementById("exit-queue").addEventListener("click", async () => {
        await gameNetwork.leaveQueue();
        window.location.href = "/";
    });
</script>