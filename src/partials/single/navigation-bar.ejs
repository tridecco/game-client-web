<%
function classNames(active) {
  return active
    ? "flex items-center py-3 px-6 border-l-4 nav-item nav-active"
    : "flex items-center py-3 px-6 text-gray-600 border-l-4 border-transparent nav-item hover:text-amber-800";
}
%>

<style>
  .nav-active {
    background-color: rgba(217, 119, 6, 0.1);
    border-left-color: #D97706;
    color: #92400E;
    font-weight: 600;
  }

  .nav-item:hover {
    background-color: rgba(0, 0, 0, 0.05);
  }
</style>

<aside class="hidden lg:flex flex-col w-20 hover:w-56 transition-all duration-300 ease-in-out bg-white/80 backdrop-blur-sm rounded-xl shadow-lg border border-amber-700/30 overflow-hidden group">
  <!-- Logo/Game Title Area -->
  <div class="w-full p-4 flex items-center group-hover:justify-start space-x-3 border-b border-amber-700/20 h-[72px] flex-shrink-0">
    <!-- Logo -->
    <img src="/favicon.ico" alt="Tridecco Logo" class="w-8 h-8 flex-shrink-0 mx-auto group-hover:mx-0">
    <span class="text-xl font-bold text-amber-900 opacity-0 group-hover:opacity-100 transition-opacity duration-200 whitespace-nowrap">Tridecco</span>
  </div>
  <!-- Navigation Links -->
  <nav class="flex-1 py-4 space-y-1 custom-scrollbar overflow-y-auto overflow-x-hidden">
    <!-- Menu -->
    <a href="/single" class="<%= classNames(page === 'menu') %>">
      <svg class="w-5 h-5 mr-4 flex-shrink-0 <%= page === 'menu' ? 'text-amber-800' : '' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
      </svg>
      <span class="opacity-0 group-hover:opacity-100 transition-opacity duration-200 whitespace-nowrap">Menu</span>
    </a>
    <!-- Statistics -->
    <a href="/single/statistics" class="<%= classNames(page === 'statistics') %>">
      <svg class="w-5 h-5 mr-4 flex-shrink-0 <%= page === 'statistics' ? 'text-amber-800' : '' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
      <span class="opacity-0 group-hover:opacity-100 transition-opacity duration-200 whitespace-nowrap">Statistics</span>
    </a>
    <!-- Settings -->
    <a href="/single/settings" class="<%= classNames(page === 'settings') %>">
      <svg class="w-5 h-5 mr-4 flex-shrink-0 <%= page === 'settings' ? 'text-amber-800' : '' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
      </svg>
      <span class="opacity-0 group-hover:opacity-100 transition-opacity duration-200 whitespace-nowrap">Settings</span>
    </a>
  </nav>
</aside>