<%
function classNames(active) {
  return active
    ? "flex items-center px-3 py-2 text-amber-100 bg-amber-700 rounded-md font-bold group"
    : "flex items-center px-3 py-2 text-amber-800 hover:bg-amber-200 hover:text-amber-900 rounded-md group";
}
%>

<nav class="w-full md:w-1/4 lg:w-1/5 md:pr-6 md:border-r border-amber-700 border-opacity-30 mb-6 md:mb-0 flex-shrink-0 overflow-y-auto">
  <h3 class="text-xl font-semibold text-amber-900 mb-4 border-b border-amber-700 border-opacity-30 pb-2">Menu</h3>
  <ul class="space-y-2">
    <li>
      <!-- Profile -->
      <a href="/user" class="<%= classNames(page === 'profile') %>">
        <svg class="w-5 h-5 mr-2 opacity-80 group-hover:opacity-100" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
        Profile
      </a>
    </li>
    <li>
      <!-- Account -->
      <a href="/user/account" class="<%= classNames(page === 'account') %>">
        <svg class="w-5 h-5 mr-2 opacity-60 group-hover:opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        Account
      </a>
    </li>
    <li>
      <!-- Settings -->
      <a href="/user/settings" class="<%= classNames(page === 'settings') %>">
        <svg class="w-5 h-5 mr-2 opacity-60 group-hover:opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        Settings
      </a>
    </li>
    <li>
      <!-- Game History -->
      <a href="/user/game-history" class="<%= classNames(page === 'game-history') %>">
        <svg class="w-5 h-5 mr-2 opacity-60 group-hover:opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        Game History
      </a>
    </li>
    <li>
      <!-- Elo History -->
      <a href="/user/elo-history" class="<%= classNames(page === 'elo-history') %>">
        <svg class="w-5 h-5 mr-2 opacity-60 group-hover:opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        Elo History
      </a>
    </li>
    <li>
      <!-- Experience History -->
      <a href="/user/experience-history" class="<%= classNames(page === 'experience-history') %>">
        <svg class="w-5 h-5 mr-2 opacity-60 group-hover:opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
        </svg>
        Experience History
      </a>
    </li>
    <li>
      <!-- Security -->
      <a href="/user/security" class="<%= classNames(page === 'security') %>">
        <svg class="w-5 h-5 mr-2 opacity-60 group-hover:opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
        </svg>
        Security
      </a>
    </li>
    <li>
      <!-- Logout -->
      <a href="/logout" class="<%= classNames(page === 'logout') %> hover:bg-red-200 hover:text-red-900 rounded-md group">
        <svg class="w-5 h-5 mr-2 opacity-60 group-hover:opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
        </svg>
        Logout
      </a>
    </li>
  </ul>
</nav>