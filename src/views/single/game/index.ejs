<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("../../../partials/head.ejs") %>
  <title>Tridecco | Game</title>
  <script src="<%= env.CDN_URL %>/js/single/game.js"></script>
</head>

<body class="h-screen overflow-hidden bg-no-repeat bg-center bg-cover" style="background-image: url('<%= env.CDN_URL %>/img/backgrounds/wooden-board.jpg');">

  <!-- Main Game UI Container -->
  <div class="fixed inset-0 flex flex-col h-screen text-white p-3 sm:p-4 gap-3 sm:gap-4">

    <!-- Top Bar: AI Info, Exit, and Player Scores -->
    <header class="h-24 md:h-28 flex items-center p-3 sm:p-4 gap-4 flex-shrink-0">
      <!-- Left: Exit Button -->
      <div class="flex-shrink-0">
        <a href="/single" class="flex items-center justify-center w-12 h-12 rounded-full bg-white/10 hover:bg-white/20 border border-white/20 transition-colors" aria-label="Exit Game">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
          </svg>
        </a>
      </div>

      <!-- Center: AI Pieces Area -->
      <div class="flex-grow h-full flex items-center justify-center p-2 gap-2 sm:gap-3 overflow-hidden"></div>

      <!-- Right: Player Scores -->
      <div class="flex-shrink-0 flex flex-col items-end space-y-2 text-right w-32 sm:w-40">
        <div>
          <span class="text-xs sm:text-sm uppercase text-white/70 tracking-wider">Score</span>
          <p class="text-lg sm:text-2xl font-bold text-amber-300">1,230</p>
        </div>
        <div>
          <span class="text-xs sm:text-sm uppercase text-white/70 tracking-wider">High Score</span>
          <p class="text-base sm:text-lg font-medium text-white/80">8,450</p>
        </div>
      </div>
    </header>

    <!-- Middle Layer: Game Board Area -->
    <main class="flex-1 min-h-0 flex items-center justify-center">
      <!-- The actual game board will be rendered inside this container -->
      <div id="board-container" class="w-full h-full max-w-5xl max-h-[80vh] aspect-square">
        <!-- Placeholder text, will be replaced by canvas -->
        <div class="flex items-center justify-center h-full text-white/20 text-3xl font-thin tracking-widest select-none">BOARD</div>
      </div>
    </main>

    <!-- Bottom Bar: Player's Pieces -->
    <footer class="h-24 md:h-28 flex items-center p-3 sm:p-4 gap-4 flex-shrink-0"></footer>

  </div>

  <!-- Modals Layer -->
  <div class="fixed inset-0 z-50 pointer-events-none">

    <!-- Modal Type 1: Draggable Side Request (Hidden by default) -->
    <div id="side-request-modal" class="hidden pointer-events-auto absolute top-1/4 left-8 w-64 bg-slate-800/70 backdrop-blur-xl rounded-xl shadow-2xl border border-white/20 overflow-hidden">
      <div class="drag-handle bg-slate-900/50 p-2 text-center text-sm font-bold text-white/80">
        Trade Request
      </div>
      <div class="p-4 space-y-3">
        <p class="text-center text-white">AI wants to trade a piece with you.</p>
        <div class="flex justify-around pt-2">
          <button class="px-5 py-2 bg-emerald-600 hover:bg-emerald-500 rounded-lg text-white font-semibold transition-colors">Accept</button>
          <button class="px-5 py-2 bg-gray-400 text-white font-semibold rounded-lg cursor-not-allowed opacity-60" disabled>Refuse</button>
        </div>
      </div>
    </div>

    <!-- Modal Type 2: Centered Complex Modal (Hidden by default) -->
    <div id="centered-complex-modal" class="hidden pointer-events-auto fixed inset-0 bg-black/60 flex items-center justify-center p-4">
      <div class="w-full max-w-lg bg-gray-800/80 backdrop-blur-xl rounded-2xl shadow-2xl border border-white/20 flex flex-col">
        <!-- Modal Header -->
        <div class="flex items-center justify-between p-4 border-b border-white/10">
          <h3 class="text-xl font-bold text-white">Trade Pieces</h3>
          <button class="p-1 rounded-full hover:bg-white/20 transition-colors" aria-label="Close modal">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
        <!-- Modal Body -->
        <div class="p-6 space-y-4">
          <p class="text-white/80">Select a piece from your hand to offer for a trade.</p>
          <!-- Placeholder for complex content, e.g., piece selection -->
          <div class="h-40 rounded-lg flex items-center justify-center">
            <span class="text-white/30">Complex content area...</span>
          </div>
        </div>
        <!-- Modal Footer -->
        <div class="flex justify-end p-4 bg-black/20 border-t border-white/10 rounded-b-2xl">
          <button class="px-6 py-2 bg-blue-600 hover:bg-blue-500 rounded-lg text-white font-bold transition-colors">Confirm Trade</button>
        </div>
      </div>
    </div>

  </div>

</body>

</html>