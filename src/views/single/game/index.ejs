<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("../../../partials/head.ejs") %>
  <title>Tridecco | Game</title>
  <%- include("../../../partials/libs/canvas-confetti.ejs") %>
  <script src="<%= env.CDN_URL %>/js/single/game.js"></script>
  <style>
    .custom-scrollbar::-webkit-scrollbar {
      width: 8px;
      height: 8px;
    }

    .custom-scrollbar::-webkit-scrollbar-track {
      background: rgba(255, 255, 255, 0.05);
      border-radius: 10px;
    }

    .custom-scrollbar::-webkit-scrollbar-thumb {
      background: rgba(255, 255, 255, 0.2);
      border-radius: 10px;
    }

    .custom-scrollbar::-webkit-scrollbar-thumb:hover {
      background: rgba(255, 255, 255, 0.3);
    }
  </style>
</head>

<body class="h-screen overflow-hidden bg-no-repeat bg-center bg-cover" style="background-image: url('<%= env.CDN_URL %>/img/backgrounds/wooden-board.jpg');">

  <!-- Main Game UI Container -->
  <div class="fixed inset-0 flex flex-col h-screen text-white p-3 sm:p-4 gap-3 sm:gap-4">

    <!-- Responsive Top Bar -->
    <header class="flex flex-col md:grid md:grid-cols-[1fr_auto_1fr] md:items-center p-0 md:p-3 md:gap-4 flex-shrink-0">

      <!-- Column 1 (Left) -->
      <div class="flex items-center w-full p-3 md:p-0">
        <a href="/single" class="flex items-center justify-center w-12 h-12 rounded-full bg-white/10 hover:bg-white/20 border border-white/20 transition-colors flex-shrink-0" aria-label="Exit Game">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
          </svg>
        </a>
        <div class="flex-grow text-center md:hidden">
          <span class="text-xs uppercase text-white/70 tracking-wider">Score</span>
          <p class="text-2xl font-bold text-amber-300" data-score-mobile>0</p>
        </div>
        <div class="w-12 text-right md:hidden flex-shrink-0">
          <span class="text-xs uppercase text-white/70 tracking-wider">High</span>
          <p class="text-lg font-medium text-white/80" data-highscore-mobile>0</p>
        </div>
      </div>

      <!-- Column 2 (Center): AI Pieces Area -->
      <div class="h-20 md:h-full w-full grid place-items-center overflow-x-auto overflow-y-hidden custom-scrollbar">
        <div id="ai-pieces-container" class="flex flex-nowrap gap-2 sm:gap-3">
          <!-- AI Pieces will be rendered here -->
        </div>
      </div>

      <!-- Column 3 (Right): Desktop-Only Player Scores -->
      <div class="hidden md:flex justify-end">
        <div class="flex-shrink-0 flex-col items-end space-y-2 text-right w-32 sm:w-40">
          <div>
            <span class="text-xs sm:text-sm uppercase text-white/70 tracking-wider">Your Score</span>
            <p class="text-lg sm:text-2xl font-bold text-amber-300" data-score-desktop>0</p>
          </div>
          <div>
            <span class="text-xs sm:text-sm uppercase text-white/70 tracking-wider">High Score</span>
            <p class="text-base sm:text-lg font-medium text-white/80" data-highscore-desktop>0</p>
          </div>
        </div>
      </div>
    </header>

    <!-- Middle Layer: Game Board Area -->
    <main class="flex-1 min-h-0 flex items-center justify-center">
      <div id="board-container" class="w-full h-full max-w-5xl max-h-[80vh] aspect-square">
        <div class="flex items-center justify-center h-full text-white/20 text-3xl font-thin tracking-widest select-none">BOARD</div>
      </div>
    </main>

    <!-- Bottom Bar: Your Pieces -->
    <footer id="player-pieces-container" class="h-24 md:h-28 flex items-center p-3 sm:p-4 gap-4 flex-shrink-0 justify-center overflow-x-auto overflow-y-hidden custom-scrollbar">
      <!-- Player Pieces will be rendered here -->
    </footer>

  </div>

  <!-- Perform Trade Modal -->
  <div id="trade-modal-perform" class="fixed inset-0 z-[100] bg-black/50 flex items-center justify-center p-4 transition-opacity duration-300 hidden">
    <div class="relative w-full max-w-3xl lg:max-w-4xl max-h-[90vh] bg-gradient-to-br from-gray-900 to-gray-800 rounded-xl shadow-2xl border border-white/10 flex flex-col p-6 sm:p-8 transform scale-100 opacity-100 transition-all duration-300">
      <!-- Minimize Button -->
      <button class="absolute top-4 left-4 z-10 flex items-center justify-center w-8 h-8 rounded-full bg-white/10 hover:bg-white/20 border border-white/20 transition-colors" aria-label="Minimize Trade Window">
        <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
        </svg>
      </button>

      <h3 class="text-xl sm:text-2xl font-bold text-center text-white mb-6 tracking-wide">Initiate Piece Trade</h3>

      <div class="flex flex-col md:flex-row items-center gap-6 flex-grow min-h-0">
        <!-- AI Piece Selection Column -->
        <div class="flex-1 w-full bg-gray-800/50 rounded-lg p-4 flex flex-col custom-scrollbar overflow-y-auto max-h-[calc(80vh-160px)] md:max-h-full">
          <p class="text-sm sm:text-base uppercase text-white/70 font-semibold mb-3 text-center tracking-wider">AI's Pieces</p>
          <div class="grid grid-cols-3 sm:grid-cols-4 lg:grid-cols-5 gap-3">
            <!-- AI Piece Example -->
            <div class="game-piece-unit group relative aspect-square w-full bg-gradient-to-br from-indigo-800/30 to-purple-800/30 border border-white/10 rounded-lg shadow-md hover:border-white/30 transition-all duration-200 cursor-pointer flex items-center justify-center p-1 ai-piece-select">
              <canvas class="absolute inset-0 w-full h-full rounded-lg"></canvas>
              <span class="absolute flex items-center justify-center text-white text-xl font-bold opacity-0 group-hover:opacity-100 transition-opacity duration-200 pointer-events-none">8</span>
              <!-- Selected state overlay -->
              <div class="absolute inset-0 border-2 border-amber-400 rounded-lg opacity-0 group-[.selected]:opacity-100 transition-opacity duration-200 pointer-events-none"></div>
            </div>
          </div>
        </div>

        <!-- Middle Arrows -->
        <div class="flex-shrink-0 flex md:flex-col items-center justify-center gap-3 md:gap-4 p-2 md:p-0">
          <svg class="w-8 h-8 sm:w-10 sm:h-10 text-white/70 md:rotate-0 rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3" />
          </svg>
          <svg class="w-8 h-8 sm:w-10 sm:h-10 text-white/70 md:rotate-180 rotate-[270deg]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3" />
          </svg>
        </div>

        <!-- Your Piece Selection Column -->
        <div class="flex-1 w-full bg-gray-800/50 rounded-lg p-4 flex flex-col custom-scrollbar overflow-y-auto max-h-[calc(80vh-160px)] md:max-h-full">
          <p class="text-sm sm:text-base uppercase text-white/70 font-semibold mb-3 text-center tracking-wider">Your Pieces</p>
          <div class="grid grid-cols-3 sm:grid-cols-4 lg:grid-cols-5 gap-3">
            <!-- Your Piece Example -->
            <div class="game-piece-unit group relative aspect-square w-full bg-gradient-to-br from-teal-800/30 to-blue-800/30 border border-white/10 rounded-lg shadow-md hover:border-white/30 transition-all duration-200 cursor-pointer flex items-center justify-center p-1 your-piece-select">
              <canvas class="absolute inset-0 w-full h-full rounded-lg"></canvas>
              <span class="absolute flex items-center justify-center text-white text-xl font-bold opacity-0 group-hover:opacity-100 transition-opacity duration-200 pointer-events-none">3</span>
            </div>
            <div class="game-piece-unit group relative aspect-square w-full bg-gradient-to-br from-teal-800/30 to-blue-800/30 border border-white/10 rounded-lg shadow-md hover:border-white/30 transition-all duration-200 cursor-pointer flex items-center justify-center p-1 your-piece-select">
              <canvas class="absolute inset-0 w-full h-full rounded-lg"></canvas>
              <span class="absolute flex items-center justify-center text-white text-xl font-bold opacity-0 group-hover:opacity-100 transition-opacity duration-200 pointer-events-none">7</span>
              <div class="absolute inset-0 border-2 border-amber-400 rounded-lg opacity-0 group-[.selected]:opacity-100 transition-opacity duration-200 pointer-events-none"></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Confirm Button -->
      <div class="flex justify-center mt-6">
        <button class="px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow-lg transition-colors duration-200">
          Confirm Trade
        </button>
      </div>
    </div>
  </div>

  <!-- Being Traded Window -->
  <div id="trade-modal-being" class="fixed inset-0 z-[90] bg-black/60 flex items-center justify-center p-4 transition-opacity duration-300 hidden">
    <div class="w-full max-w-3xl lg:max-w-4xl max-h-[90vh] bg-gradient-to-br from-gray-900 to-gray-800 rounded-xl shadow-2xl border border-white/10 flex flex-col p-6 sm:p-8 transform scale-100 opacity-100 transition-all duration-300">
      <h3 class="text-xl sm:text-2xl font-bold text-center text-red-400 mb-6 tracking-wide">Trade in Progress!</h3>

      <div class="flex flex-col md:flex-row items-center gap-6 flex-grow min-h-0">
        <div class="flex-1 w-full bg-gray-800/50 rounded-lg p-4 flex flex-col custom-scrollbar overflow-y-auto max-h-[calc(80vh-160px)] md:max-h-full">
          <p class="text-sm sm:text-base uppercase text-white/70 font-semibold mb-3 text-center tracking-wider">AI Gives</p>
          <div class="grid grid-cols-1 place-items-center gap-3">
            <!-- AI Piece Example (not interactive) -->
            <div class="game-piece-unit relative aspect-square w-32 h-32 bg-gradient-to-br from-indigo-800/30 to-purple-800/30 border border-white/10 rounded-lg shadow-md flex items-center justify-center">
              <canvas class="absolute inset-0 w-full h-full rounded-lg"></canvas>
              <span class="absolute flex items-center justify-center text-white text-3xl font-bold">8</span>
            </div>
          </div>
        </div>

        <div class="flex-shrink-0 flex md:flex-col items-center justify-center gap-3 md:gap-4 p-2 md:p-0">
          <svg class="w-8 h-8 sm:w-10 sm:h-10 text-red-400 md:rotate-0 rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3" />
          </svg>
          <svg class="w-8 h-8 sm:w-10 sm:h-10 text-red-400 md:rotate-180 rotate-[270deg]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3" />
          </svg>
        </div>

        <!-- Your Piece Display Column -->
        <div class="flex-1 w-full bg-gray-800/50 rounded-lg p-4 flex flex-col custom-scrollbar overflow-y-auto max-h-[calc(80vh-160px)] md:max-h-full">
          <p class="text-sm sm:text-base uppercase text-white/70 font-semibold mb-3 text-center tracking-wider">You Give</p>
          <div class="grid grid-cols-1 place-items-center gap-3">
            <!-- Your Piece Example (not interactive) -->
            <div class="game-piece-unit relative aspect-square w-32 h-32 bg-gradient-to-br from-teal-800/30 to-blue-800/30 border border-white/10 rounded-lg shadow-md flex items-center justify-center">
              <canvas class="absolute inset-0 w-full h-full rounded-lg"></canvas>
              <span class="absolute flex items-center justify-center text-white text-3xl font-bold">7</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Minimized Window Toggle -->
  <div id="minimized-trade-perform" class="fixed right-4 top-1/2 -translate-y-1/2 z-[110] w-16 h-16 sm:w-20 sm:h-20 bg-blue-600/70 hover:bg-blue-600 border border-blue-400 rounded-full shadow-xl flex items-center justify-center cursor-grab active:cursor-grabbing transition-all duration-200 group hidden" aria-label="Open Trade Window">
    <svg class="w-8 h-8 sm:w-10 sm:h-10 text-white group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 21L3 16.5m0 0L7.5 12M3 16.5h18M16.5 3L21 7.5m0 0L16.5 12M21 7.5H3" />
    </svg>
    <span class="absolute top-full mt-2 px-3 py-1 bg-gray-700 text-white text-xs rounded-md opacity-0 group-hover:opacity-100 transition-opacity duration-200 whitespace-nowrap pointer-events-none">Trade Pieces</span>
  </div>

  <!-- Large Game Info Message -->
  <div id="game-info-message" class="fixed top-1/3 left-1/2 -translate-x-1/2 -translate-y-1/2 z-50 p-4 w-full max-w-lg text-center pointer-events-none hidden" style="font-family: 'tridecco', sans-serif;">
    <p class="font-tridecco text-6xl md:text-7xl text-white/90 drop-shadow-lg tracking-wide select-none"></p>
  </div>

  <!-- Game Over Modal (Initially hidden) -->
  <div id="game-over-modal" class="fixed inset-0 z-[200] bg-black/70 backdrop-blur-md flex items-center justify-center p-4 transition-opacity duration-500 hidden">
    <div class="w-full max-w-lg bg-gradient-to-br from-gray-900 to-gray-800 rounded-2xl shadow-2xl border border-white/10 p-6 sm:p-8 flex flex-col items-center gap-6 text-center transform opacity-0 scale-95 transition-all duration-300">

      <!-- 1. Top Section: Result Title & Main Scores -->
      <div class="w-full">
        <h2 class="font-tridecco text-5xl md:text-6xl font-bold text-amber-300 drop-shadow-lg">
          You Won!
        </h2>

        <!-- Score and High Score -->
        <div class="mt-4 flex justify-center gap-8">
          <div>
            <span class="text-sm uppercase text-white/60 tracking-wider">Score</span>
            <p class="text-2xl font-semibold text-white">1,230</p>
          </div>
          <div>
            <span class="text-sm uppercase text-white/60 tracking-wider">High Score</span>
            <p class="text-2xl font-semibold text-white">8,450</p>
          </div>
        </div>
      </div>

      <!-- 2. Middle Section: Score Details -->
      <div class="w-full border-y border-white/10 py-6 space-y-3">
        <!-- Header Row -->
        <div class="flex justify-between items-baseline text-xs uppercase text-white/50 tracking-wider">
          <span>Item</span>
          <span>Your Score</span>
        </div>
        <!-- Detail Rows (examples) -->
        <div class="flex justify-between items-baseline">
          <span class="text-white/80">Base Score</span>
          <span class="font-semibold text-white">+ 850</span>
        </div>
        <div class="flex justify-between items-baseline">
          <span class="text-white/80">Time Bonus</span>
          <span class="font-semibold text-white">+ 210</span>
        </div>
        <div class="flex justify-between items-baseline">
          <span class="text-white/80">Perfect Clear</span>
          <span class="font-semibold text-amber-300">+ 170</span>
        </div>
      </div>

      <!-- 3. Bottom Section: Action Buttons -->
      <div class="w-full flex flex-col sm:flex-row gap-4">
        <!-- Secondary Action: Exit -->
        <a href="/single" class="w-full flex items-center justify-center px-6 py-3 bg-white/10 hover:bg-white/20 border border-white/20 rounded-lg font-semibold text-white transition-colors">
          Exit
        </a>

        <!-- Primary Action: Play Again -->
        <button class="w-full flex items-center justify-center px-6 py-3 bg-blue-600 hover:bg-blue-700 rounded-lg font-semibold text-white shadow-lg transition-colors">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 4v5h5M20 20v-5h-5" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 9a9 9 0 0 1 14.24-4.96l-1.87 1.87A6.972 6.972 0 0 0 10.5 5.03a7 7 0 0 0-6.24 8.97" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M20 15a9 9 0 0 1-14.24 4.96l1.87-1.87a6.972 6.972 0 0 0 6.37 1.88 7 7 0 0 0 6.24-8.97" />
          </svg>
          Play Again
        </button>
      </div>
    </div>
  </div>

</body>

</html>